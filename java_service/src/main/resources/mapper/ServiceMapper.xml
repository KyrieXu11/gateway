<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kyriexu.dao.ServiceDao">
    <resultMap id="serviceInfo"
               type="com.kyriexu.model.ServiceInfo">
        <result column="is_delete" javaType="java.lang.Boolean"
                property="deleted"/>
    </resultMap>
    <insert id="saveServiceInfo" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        insert into gateway_service_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="loadType != null">
                load_type,
            </if>
            <if test="serviceName != null">
                service_name,
            </if>
            <if test="serviceDesc != null">
                service_desc,
            </if>
            <if test="createAt != null">
                create_at,
            </if>
            <if test="updateAt != null">
                update_at,
            </if>
            <if test="deleted != null">
                is_delete,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="loadType != null">
                #{loadType},
            </if>
            <if test="serviceName != null">
                #{serviceName},
            </if>
            <if test="serviceDesc != null">
                #{serviceDesc},
            </if>
            <if test="createAt != null">
                #{createAt},
            </if>
            <if test="updateAt != null">
                #{updateAt},
            </if>
            <if test="deleted != null">
                #{deleted},
            </if>
        </trim>
    </insert>
    <update id="updateServiceInfo"
            parameterType="com.kyriexu.model.ServiceInfo">
        update gateway_service_info
        <set>
            <trim suffixOverrides=",">
                <if test="loadType != null">
                    load_type = #{loadType},
                </if>
                <if test="serviceName != null">
                    service_name = #{serviceName},
                </if>
                <if test="serviceDesc != null">
                    service_desc = #{serviceDesc},
                </if>
                <if test="createAt != null">
                    create_at = #{createAt},
                </if>
                <if test="updateAt != null">
                    update_at = #{updateAt},
                </if>
                <if test="deleted != null">
                    is_deleted =#{deleted},
                </if>
            </trim>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="getServiceInfoList"
            resultMap="serviceInfo">
        select *
        from gateway_service_info
        <where>
            is_delete != 1
            <if test="query != null">
                and service_name like concat('%',#{query},'%')
            </if>
        </where>
        limit #{page},#{size}
        order by id desc;
    </select>
    <select id="get" resultMap="serviceInfo">
        select *
        from gateway_service_info
        where is_delete != 1
          and id = #{id};
    </select>

    <select id="getTotal" resultType="java.lang.Integer">
        select count(*)
        from gateway_service_info
        where is_delete != 1;
    </select>
    <select id="getByServiceName"
            resultMap="serviceInfo">
        select *
        from gateway_service_info
        where is_delete != 1
          and service_name = #{serviceName};
    </select>
</mapper>